@model List<ResultCarCountByBrandDto>

<script src="~/chart.js"></script>

<div class="col-lg-4">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title mb-4">Araç Marka Sayıları</h4>

            <div style="height: 290px;">
                <canvas id="my2Chart"></canvas>
            </div>

            <script>
                var values = document.getElementById('my2Chart').getContext('2d');
                var myChart = new Chart(values, {
                    type: 'pie',
                    data: {
                        labels: @Html.Raw(Json.Serialize(Model.Select(x => x.BrandName))),
                        datasets: [{
                            data: @Html.Raw(Json.Serialize(Model.Select(x => x.CarCount))),
                            backgroundColor: [
                                 '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF', '#FF9F40',
                                 '#8bc34a', '#f44336', '#009688', '#607d8b', '#795548', '#ffeb3b'                      
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'right', // Yazıları sağa alarak dağınıklığı giderir
                                labels: {
                                    boxWidth: 12,
                                    padding: 10,
                                    font: { size: 11 }
                                }
                            }
                        },
                        layout: {
                            padding: {
                                top: 10,
                                bottom: 10
                            }
                        }
                    }
                });
            </script>

            <div class="row text-center mt-4">
                <div class="col-6">
                    <h4 class="mb-0">@Model.Sum(x => x.CarCount)</h4>
                    <p class="text-muted mb-0">Araç Sayısı</p>
                </div>
                <div class="col-6">
                    <h4 class="mb-0">@Model.Count</h4>
                    <p class="text-muted mb-0">Marka Sayısı</p>
                </div>
            </div>
        </div>
    </div>
</div>