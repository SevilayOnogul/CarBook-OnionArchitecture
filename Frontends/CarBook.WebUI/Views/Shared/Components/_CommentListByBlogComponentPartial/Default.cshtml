@model List<ResultCommentDto>


<ul class="comment-list">
    @foreach (var item in Model)
    {
        <li class="comment">
            <div class="vcard bio">
                <div class="avatar">@item.NameInitials</div>
            </div>
            <div class="comment-body">
                <h3>@item.Name</h3>
                <div class="meta">@item.CreatedDate.ToString("dd MMMM yyyy")</div>
                <p>@item.Description</p>
            </div>
        </li>
    }
</ul>


<style>
    .avatar {
        width: 50px;
        height: 50px;
        background-color: #5867dd; 
        color: #ffffff;
        border-radius: 50%; 
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 16px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        border: 2px solid #fff;
    }

    .vcard.bio {
        float: left;
        margin-right: 20px;
    }
</style>